<%= simple_form_for(@event) do |f| %>
<%= f.error_notification %>
<div class="field">
    <div class="control">
      <%= f.input :title, required: true, autofocus: true, required: true, label: "Title", input_html: { class: "input"}, placeholder: "Happy hour", wrapper: false, label_html: { class: "label" } %>
    </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :description, required: true, label: "Description", input_html: { class: "input"}, placeholder: "Grabbing beers at Patty's pub!", wrapper: false, label_html: { class: "label" } %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :location, required: true, label: "Location", input_html: { class: "input"}, placeholder: "Philadelphia", wrapper: false, label_html: { class: "label" } %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :date, as: :date, html5: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
